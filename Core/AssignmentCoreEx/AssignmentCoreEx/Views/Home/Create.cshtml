@model Product
<html>
    <head>
        <title> Home-Create </title>
    </head>
    <body>
        <div>
            <h2> Product Info </h2>
        </div>
        <form asp-action="Create" method="post">
            <div>
                <label asp-for="ProductName"></label>
                <div>
                    <input asp-for="ProductName" />
                </div>
            </div> <br />

            <div>
                <label asp-for="ProductDesc"></label>
                <div>
                    <input asp-for="ProductDesc" />
                </div>
            </div> <br />

            <div>
                <label asp-for="Price"></label>
                <div>
                    <input asp-for="Price" />
                </div>
            </div> <br />

            <div>
                <label asp-for="ProductCategory.CategoryName"></label>
                <select asp-for="ProductCategoryID" asp-items="@ViewBag.ProductCategoryID">
                    <option> Select CategoryName </option>
                </select>
            </div> <br />

            <div>
                <label> Mfg Name </label>
                <select asp-for="MfgID" asp-items="@ViewBag.MfgID">
                    <option> Select Mfg </option>
                </select>
            </div> <br />

            <div>
                <label> Color Name </label>
                <select asp-for="ColorID" asp-items="@ViewBag.ColorID">
                    <option> Select Color </option>
                </select>
            </div> <br />

            <div>
                <input type="submit" value="Save" />
                <a asp-action="Index"> Go to Back </a>
            </div>
        </form>
    </body>
</html>