@model Emp
<html>
    <head>
        <title> Home-Create </title>
    <link href="~/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <script src="~/bootstrap/js/bootstrap.bundle.js"></script>
    </head>
    <body>
        <div class="container">
            <h2> Create Emp Details </h2>
            <div class="row">
                <form asp-action="Create" method="post" class="form-text">
                    <div>
                        <label asp-for="EmpName"></label>
                        <div>
                            <input asp-for="EmpName"/>
                            <span asp-validation-for="EmpName"></span>
                        </div>
                    </div>

                    <div>
                        <label asp-for="EmailID"></label>
                        <div>
                            <input asp-for="EmailID"/>
                        <span asp-validation-for="EmailID"></span>
                        </div>
                    </div>

                    <div>
                        <label asp-for="Address"></label>
                        <div>
                            <input  asp-for="Address"/>
                        <span asp-validation-for="Address"></span>
                        </div>
                    </div>

                    <div>
                        <label asp-for="Salary"></label>
                        <div>
                        <input asp-for="Salary" />
                        <span asp-validation-for="Salary"></span>
                        </div>
                    </div>

                    <div>
                        <label asp-for="Department.DeptName"></label>
                        <div>
                            <select asp-for="DeptID" asp-items="@ViewBag.Department">
                                <option> Select DeptName </option>
                            </select>
                        </div>
                    </div>
                    <div>
                    <input type="submit" value="Save" class="btn btn-success"/>
                    </div>
                </form>
            </div>
        </div>
    </body>
</html>