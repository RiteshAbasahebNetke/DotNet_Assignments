@model Book
<html>
<head>
    <title> Home-Edit </title>
    <link href="~/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <script src="~/bootstrap/js/bootstrap.bundle.js"></script>
</head>
<div class="container">
    <h2> Update Book Details </h2>
    <div class="row">
        <form asp-action="Edit" method="post">

            <input type="hidden" asp-for="BookID" />
            <div>
                <label asp-for="BookName"></label>
                <div>
                    <input asp-for="BookName" />
                    <span asp-validation-for="BookName"></span>
                </div>
            </div>

            <div>
                <label asp-for="AuthorName"></label>
                <div>
                    <input asp-for="AuthorName" />
                    <span asp-validation-for="AuthorName"></span>
                </div>
            </div>

            <div>
                <label asp-for="Price"></label>
                <div>
                    <input asp-for="Price" />
                    <span asp-validation-for="Price"></span>
                </div>
            </div>
            <div>
                <label asp-for="Subject.SubjectName"></label>
                <div>
                    <select asp-for="SubjectID" asp-items="@ViewBag.SubjectID">
                        <option> Select Subject </option>
                    </select>
                </div>
            </div> <br />
            <div>
                <input type="submit" value="Update" class="btn btn-secondary" />
            </div>
        </form>
    </div>
</div>
</html>