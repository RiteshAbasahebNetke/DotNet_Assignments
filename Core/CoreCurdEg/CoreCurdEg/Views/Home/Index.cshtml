@model IEnumerable<Customer>
<html>
<head>
    <title> Home-Index </title>
</head>
<body>
    <h2> Customer List </h2>
    <hr />
    <a asp-action="Create"> Create New </a>
    <hr />
    <table border="1">
        <thead>
            <tr>
                <td align="center"> Sr No </td>
                <td align="center"> First Name </td>
                <td align="center"> Last Name </td>
                <td align="center"> EmailID </td>
                <td align="center"> Area Name </td>
                <td align="center"> Credit Limit </td>
                <td align="center"> Actions </td>
            </tr>
        </thead>
        <tbody>
        @{
            int SrNo = 1;
        }
        @foreach(var temp in Model)
        {
            
                <tr>
                    <td align="center"> @SrNo </td>
                    <td align="center"> @temp.FirstName </td>
                    <td align="center"> @temp.LastName </td>
                    <td align="center"> @temp.EmailID </td>
                    <td align="center"> @temp.Area.AreaName </td>
                    <td align="center"> @temp.CreditLimit </td>
                    <td align="center">
                        <a asp-action="Edit" asp-route-id="@temp.CustomerID"> Edit </a>
                        <a asp-action="Delete" asp-route-id="@temp.CustomerID"> Delete </a>
                    </td>
                </tr>
                SrNo++;
        }
        </tbody>
    </table>
    </body>
</html>