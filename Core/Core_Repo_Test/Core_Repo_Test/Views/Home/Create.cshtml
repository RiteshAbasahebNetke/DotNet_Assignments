@model Flights
<html>
    <head>
        <title> Home-Create </title>
    </head>
    <body>
        <div>
            <h2> Create Flight </h2>
            <div>
                <form asp-action="Create" method="post">
                    <div>
                        <label asp-for="FlightNo"></label>
                        <div>
                            <input asp-for="FlightNo"/>
                        </div>
                    </div>

                    <div>
                        <label asp-for="Fair"></label>
                        <div>
                            <input asp-for="Fair" />
                        </div>
                    </div>

                    <div>
                        <label asp-for="TravelTime"></label>
                        <div>
                            <input asp-for="TravelTime"/>
                        </div>
                    </div>

                    <div>
                        <label> Select Source:</label>
                        <div>
                        <select asp-for="SourceCityID" asp-items="ViewBag.City">
                                <option> Select Source City</option>
                            </select>
                        </div>
                    </div>

                <div>
                    <label> Select Destination:</label>
                    <div>
                        <select asp-for="DestinationCityID" asp-items="ViewBag.CityID">
                            <option> Select Destination City</option>
                        </select>
                    </div>
                </div>

                <div>
                    <label asp-for="IsDirect"></label>
                    <div>
                        <input asp-for="IsDirect" >
                    </div>
                <div>

                <div>
                    <input type="submit" value="Save Flight" />
                </div>
                </form>
            </div>
        </div>
    </body>
</html>