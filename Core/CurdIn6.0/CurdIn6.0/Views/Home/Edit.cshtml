@model Emp
<html>
<head>
    <title> Home-Edit </title>
</head>
<body>
    <div>
        <h2> Create Emp Details </h2>
        <div>
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="EmpID" />
                <div>
                    <label asp-for="EmpName"></label>
                    <div>
                        <input asp-for="EmpName" />
                    </div>
                </div>

                <div>
                    <label asp-for="EmailID"></label>
                    <div>
                        <input asp-for="EmailID" />
                    </div>
                </div>

                <div>
                    <label asp-for="Salary"></label>
                    <div>
                        <input asp-for="Salary" />
                    </div>
                </div>

                <div>
                    <label asp-for="Department.DeptName"></label>
                    <div>
                        <select asp-for="DeptID" asp-items="@ViewBag.DeptID">
                            <option> Select DeptName </option>
                        </select>
                    </div>
                </div>
                <div>
                    <input type="submit" value="Update" />
                </div>
            </form>
        </div>
    </div>
</body>
</html>