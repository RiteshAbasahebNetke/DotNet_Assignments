@model Course
<html>
    <head>
        <title> Home-Create </title>
    </head>
    <body>
        <div>
            <h2> Create Form </h2>
            <form asp-action="Create" method="post">
                <div>
                    <label asp-for="CourseName"></label>
                    <div>
                        <input asp-for="CourseName" />
                    </div>
                </div>
                <div>
                    <label asp-for="CourseDes"></label>
                    <div>
                        <input asp-for="CourseDes" />
                    </div>
                </div>
                <div>
                    <label asp-for="DurationInMonths"></label>
                    <div>
                        <input asp-for="DurationInMonths" />
                    </div>
                </div>
                <div>
                    <label asp-for="CourseCategory.CourseCategoryName"></label>
                    <div>
                        <select asp-for="CourseCategoryID" asp-items="@ViewBag.Courses">
                            <option> Select Course Category </option>
                        </select>
                    </div>
                </div>
                <div>
                    <input type="submit" value="Save"/>
                </div>
            </form>
        </div>
    </body>
</html>