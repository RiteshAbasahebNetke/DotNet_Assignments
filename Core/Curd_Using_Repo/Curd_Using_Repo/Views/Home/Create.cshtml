@model Course
<html>
    <head>
        <title> Home Create </title>
    </head>
    <link href="~/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <script src="~/bootstrap/js/bootstrap.bundle.js"></script>
    <body>
    <div class="continer">
         <div class="col-md-12">
                <div>
                <h2> Create Course </h2>
                </div>
                      
         <form asp-action="Create" method="post">
             <div>
                 <label asp-for="CourseName"></label>
                 <div>
                     <input asp-for="CourseName" />
                 </div>
             </div>
             <div>
                 <label asp-for="CourseDesc"></label>
                 <div>
                     <input asp-for="CourseDesc" />
                 </div>
             </div>
             <div>
                 <label asp-for="DurationInMonths"></label>
                 <div>
                     <input asp-for="DurationInMonths" />
                 </div>
             </div>
             <div>
                 <label asp-for="CourseCategory.CourseCategoryName"></label>
                 <div class="dropdown">
                      <select asp-for="CourseCategoryID" asp-items="@ViewBag.Courses">
                          <option> Select Course Category </option>
                      </select>
                 </div>
             </div>
             <br />
             <div>
                 <input type="submit" value="Save" class="btn btn-primary"/>
             </div>
         </form>
         </div>
    </div>
    </body>
</html>