@model Course
<html>
    <head>
        <title> Home-Edit </title>
    </head>
<link href="~/bootstrap/css/bootstrap.css" rel="stylesheet" />
<script src="~/bootstrap/js/bootstrap.bundle.js"></script>
    <div class="container">
        <div class="col-md-12">
            <div>
            <h2> Update Form </h2>
            </div>
      <form asp-action="Edit" method="post">
          <input  type="hidden" asp-for="CourseID"/>
        <div>
            <label asp-for="CourseName"></label>
            <div>
                <input asp-for="CourseName"/>
            </div>
        </div>

        <div>
            <label asp-for="CourseDesc"></label>
            <div>
                <input asp-for="CourseDesc"/>
            </div>
        </div>

        <div>
            <label asp-for=DurationInMonths></label>
            <div>
                <input asp-for="DurationInMonths"/>
            </div>
        </div>

        <div>
            <label asp-for="CourseCategory.CourseCategoryName"></label>
            <div>
                <select asp-for="CourseCategoryID" asp-items="@ViewBag.CourseCategories"></select>
            </div>
        </div>
     

        <div>
            <input type="submit" value="Update" class="btn btn-primary"/>
        </div>
      </form>
    </div>
</div>  
</html>