@model Emp
<html>
    <head>
        <title> Home-Create </title>
    </head>
    <body>
        <h2> Add New Emp Details </h2>
        <form asp-action="Create" method="post">

            <div>
                <label asp-for="EmpName"></label>
                <div>
                    <input asp-for="EmpName" />
                </div>
            </div>

            <div>
                <label asp-for="EmailID"></label>
                <div>
                    <input asp-for="EmailID" />
                </div>
            </div>

            <div>
                <label asp-for="Salary"></label>
                <div>
                    <input asp-for="Salary"/>
                </div>
            </div>

            <div>
                <label asp-for="Depts.DeptName"></label>
                <div>
                    <select asp-for="DeptID" asp-items="@ViewBag.DeptID">
                        <option> Select Dept </option>
                    </select>
                </div>
            </div>

            <input type="submit" value="Save" />
        </form>
    </body>
</html>