@model Emp
<html>
<head>
    <title> Home-Edit </title>
</head>
<body>
    <h2> Update Emp Details </h2>
    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="EmpID" />
        <div>
            <label asp-for="EmpName"></label>
            <div>
                <input asp-for="EmpName" />
            </div>
        </div>

        <div>
            <label asp-for="EmailID"></label>
            <div>
                <input asp-for="EmailID" />
            </div>
        </div>

        <div>
            <label asp-for="Salary"></label>
            <div>
                <input asp-for="Salary" />
            </div>
        </div>

        <div>
            <label asp-for="Depts.DeptName"></label>
            <div>
                <select asp-for="DeptID" asp-items="@ViewBag.DeptID">
                    <option> Select Dept </option>
                </select>
            </div>
        </div>

        <input type="submit" value="Update" />
    </form>
</body>
</html>