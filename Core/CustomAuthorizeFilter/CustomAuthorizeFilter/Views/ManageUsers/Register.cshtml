@model User
<html>
    <head>
        <title> ManageUser-Register </title>
    </head>
    <body>
        <div>
            <h2> New User Registration </h2>
           <div>
            <form asp-action="Register" method="post">
                <div>
                    <label asp-for="FirstName"></label>
                    <div>
                        <input asp-for="FirstName" />
                        <span asp-validation-for="FirstName"></span>
                    </div>
                </div>

                <div>
                    <label asp-for="LastName"></label>
                    <div>
                        <input asp-for="LastName" />
                        <span asp-validation-for="LastName"></span>
                    </div>
                </div>

                <div>
                    <label asp-for="EmailID"></label>
                    <div>
                        <input asp-for="EmailID" />
                        <span asp-validation-for="EmailID"></span>
                    </div>
                </div>

                <div>
                    <label asp-for="MobileNo"></label>
                    <div>
                        <input asp-for="MobileNo" />
                        <span asp-validation-for="MobileNo"></span>
                    </div>
                </div>

                <div>
                    <label asp-for="Password"></label>
                    <div>
                        <input asp-for="Password" />
                        <span asp-validation-for="Password"></span>
                    </div>
                </div>
                <div>
                    <input type="submit" value="Register" />
                </div>
                
            </form>
           </div>
        </div>
    </body>
</html>