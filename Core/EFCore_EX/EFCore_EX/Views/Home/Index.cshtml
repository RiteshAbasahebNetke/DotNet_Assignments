@model IEnumerable<EFCore_EX.Models.Product>
<html>
    <head>
        <title> Home Index </title>
    </head>
    <body>
        <h2> Product </h2>
        <table border="1">
            <thead>
                <tr>
                <th> ProductID </th>
                <th> ProductName </th>
                <th> MfgName </th>
                <th> Price </th>
                <th> ProductCategoryName </th>
                <th> Color </th>
                </tr>
            </thead>
            @foreach(var temp in Model)
            {
                <tr>
                    <td> @temp.ProductID </td>
                    <td> @temp.ProductName </td>
                    <td> @temp.MfgName </td>
                    <td> @temp.Price </td>
                    <td> @temp.ProductCategory.ProductCategoryName </td>
                    <td> @temp.ProductColor </td>
                </tr>
            }
        </table>
    </body>
</html>