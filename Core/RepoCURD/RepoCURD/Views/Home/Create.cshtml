@model Emp
<html>
    <head>
        <title> Home-Create </title>
    <link href="~/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <script src="~/bootstrap/js/bootstrap.bundle.js"></script>
    </head>

    <body>
        <div class="container">
            <h2> Create Emp Details </h2>
        <form asp-action="Create" method="post" class="form-check-label">
                <div>
                <label asp-for="EmpName" class="form-label"></label>
                    <div>
                        <input asp-for="EmpName" />
                    </div>
                </div>

                <div>
                    <label asp-for="EmailID" class="form-label"></label>
                    <div>
                        <input asp-for="EmailID"/>
                    </div>
                </div>

                <div>
                <label asp-for="Salary" class="form-label"></label>
                    <div>
                        <input asp-for="Salary" />
                    </div>
                </div>

                <div>
                <label asp-for="Department.DeptName" class="form-label"></label>
                    <div>
                        <select asp-for="DeptID" asp-items="@ViewBag.Department">
                            <option> Select Dept </option>
                        </select>
                    </div>
                </div>
                <div>
                    <input type="submit" value="Save" class="btn btn-outline-success"/>
                </div>
            </form>
        </div>
    </body>
</html>