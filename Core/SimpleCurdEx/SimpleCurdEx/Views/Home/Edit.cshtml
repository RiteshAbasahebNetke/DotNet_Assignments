@model Emp
<html>
    <head>
        <title> Home-Edit </title>
    </head>
    <body>

        <h2> Emp Detail Form </h2>
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="EmpID" />
            <div>
                <label asp-for="EmpName"></label>
                <div>
                    <input asp-for="EmpName" />
                </div>
            </div>

            <div>
                <label asp-for="EmailID"></label>
                <div>
                    <input asp-for="EmailID" />
                </div>
            </div>

            <div>
                <label> Salary </label>
                <div>
                <input asp-for="Price" />
                </div>
            </div>

            <div>
                <label asp-for="Dept.DeptName"></label>
                <div>
                    <select asp-for="DeptID" asp-items="@ViewBag.DeptID">
                        <option> Select Dept </option>
                    </select>
                </div>
            </div>

            <div>
                <input type="submit" value="Save" />
            </div>
        </form>
    </body>
</html>