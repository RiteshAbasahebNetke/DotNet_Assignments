@model IEnumerable<Product>

<html>
    <head>
        <title> Home-Index </title>
    </head>
    <body>
        <table border="1">
        <h2> Product List </h2>

        <a asp-action="Create"> Create New </a>
        <thead>
            <tr>
                <th> ProductID </th>
                <th> Product Name </th>
                <th> Mfg Name </th>
                <th> Category Name </th>
                <th> Price </th>
                <th> Actions </th>
            </tr>
        </thead>
        @foreach(var temp in Model)
        {
            <tr>
                <td> @temp.ProductID </td>
                <td> @temp.ProductName </td>
                <td> @temp.MfgName </td>
                <td> @temp.Category.CategoryName </td>
                <td> @temp.Price </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@temp.ProductID"> Edit </a>
                    <a asp-action="Delete" asp-route-id="@temp.ProductID"> Delete </a>
                </td>
            </tr>
        }
    </table>
    </body>
</html>