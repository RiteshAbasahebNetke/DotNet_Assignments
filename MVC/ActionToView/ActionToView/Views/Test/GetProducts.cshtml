@model IEnumerable<ActionToView.Models.Products>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>GetProducts</title>
</head>
<body>
    <div> 
        <h2> Product Info </h2>
        <table border="1">
            <thead>
                <tr>
                    <th> ProductId </th>
                    <th> ProductName </th>
                    <th> MfgName </th>
                    <th> Price </th>
                </tr>
            </thead>
            <tbody>
                @foreach(var temp in Model)
            {

                    <tr>
                        <td> @temp.ProductId </td>
                        <td> @temp.ProductName  </td>
                        <td> @temp.MfgName  </td>
                        <td> @temp.Price  </td>
                    </tr>
            }
            </tbody>

        </table>
    </div>
</body>
</html>
