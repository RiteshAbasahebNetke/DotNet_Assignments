@model IEnumerable<CodeFirstEx12.Models.Product>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div> 
        <div>
            <h2> Product Table </h2>
            <div>
                @Html.ActionLink("Create New","Create")
                <table border="1">
                    <thead>
                        <tr>
                            <th align="center"> @Html.DisplayNameFor(p=>p.ProductID) </th>
                            <th align="center"> @Html.DisplayNameFor(p=>p.ProductName) </th>
                            <th align="center"> @Html.DisplayNameFor(p=>p.MfgName) </th>
                            <th align="center"> @Html.DisplayNameFor(p=>p.Category.CategoryName) </th>
                            <th align="center"> @Html.DisplayNameFor(p=>p.Price) </th>
                        </tr>
                    </thead>
                    @foreach(var temp in Model)
            {
                <tr>
                    <td align="center"> @Html.DisplayFor(p=>temp.ProductID) </td>
                    <td align="center"> @Html.DisplayFor(p=>temp.ProductName) </td>
                    <td align="center"> @Html.DisplayFor(p=>temp.MfgName) </td>
                    <td align="center"> @Html.DisplayFor(p=>temp.Category.CategoryName) </td>
                    <td align="center"> @Html.DisplayFor(p=>temp.Price) </td>
                    <td align="center">
                        @Html.ActionLink("Edit","Edit",new { id = temp.ProductID})
                        @Html.ActionLink("Delete", "Delete", new {id=temp.ProductID})
                    </td>
                </tr>
            }
                </table>
            </div>
        </div>
    </div>
</body>
</html>
