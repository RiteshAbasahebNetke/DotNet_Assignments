@model CodeFirst_CURD.Models.Product
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>
    <h2> Update Product Details </h2>
    <div>
        @using (Html.BeginForm())
            {
                <div>
                    @Html.LabelFor(p=>p.ProductId)
                    <div>
                        @Html.EditorFor(p=>p.ProductId)
                    </div>
                </div>
                <div>
                    @Html.LabelFor(p=>p.ProductName)
                    <div>
                        @Html.EditorFor(p=>p.ProductName)
                    </div>
                </div>
                <div>
                    @Html.LabelFor(p=>p.MfgName)
                    <div>
                        @Html.EditorFor(p=>p.MfgName)
                    </div>
                </div>
                <div>
                    @Html.LabelFor(p=>p.Price)
                    <div>
                        @Html.EditorFor(p=>p.Price)
                    </div>
                </div>
                <dvi>
                    @Html.LabelFor(p=>p.Category.CategoryName)
                    <div>
                        @Html.DropDownList("CategoryId")
                    </div>
                </dvi>
                <input type="submit" value="Update" />
            }
    </div>
</body>
</html>
