@model IEnumerable<Code_First.Models.Customer>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <h2> Customer List </h2>
    <div> 
        <table border="1">
                <thead>
                    <tr>
                        <th> CustomerId </th>
                        <th> CustomerName </th>
                        <th> EmailId </th>
                        <th> Address </th>
                        <th> MobileNo </th>
                        <th> CreditLimit </th>
                    </tr>
                </thead>
            @foreach(var temp in Model)
            {
                <tr>
                    <td> @temp.CustomerId </td>
                    <td> @temp.CustomerName </td>
                    <td> @temp.EmailId </td>
                    <td> @temp.Address </td>
                    <td> @temp.MobileNo </td>
                    <td> @temp.CreditLimit </td>
                </tr>
            }
        </table>
    </div>
</body>
</html>
