@model Code_First_Curd.Models.Emp
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>
    <div> 
        <h2> Update Emp Details </h2>
        @using (Html.BeginForm())
            {
            <div>
                @Html.HiddenFor(p=>p.EmpID)
            </div>
                <div>
                    @Html.LabelFor(p=>p.EmpName)
                    <div>
                        @Html.EditorFor(p=>p.EmpName)
                    </div>
                </div>
                <div>
                    @Html.LabelFor(p=>p.EmailID)
                    <div>
                        @Html.EditorFor(p=>p.EmailID)
                    </div>
                </div>
                <div>
                    @Html.Label("Select Dept")
                    <div>
                        @Html.DropDownList("DeptID","Select Dept")
                    </div>
                </div>
                <div>
                    @Html.LabelFor(p=>p.Salary)
                    <div>
                        @Html.EditorFor(p=>p.Salary)
                    </div>
                </div>
                <div>
                    <input type="submit" value="Update" />
                </div>
            }
    </div>
</body>
</html>
