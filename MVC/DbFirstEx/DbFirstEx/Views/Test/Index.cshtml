@model IEnumerable<DbFirstEx.Models.Product_T>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div> 
        <table border="1">
            <tr>
                <th>ProductID </th>
                <th> Product Name </th>
                <th> MfgName </th>
                <th> Price </th>
            </tr>
            @foreach(var temp in Model)
            {
                <tr>
                    <td> @temp.ProductId </td>
                    <td> @temp.ProductName </td>
                    <td> @temp.MfgName </td>
                    <td> @temp.Price  </td>
                </tr>
            }
        </table>
    </div>
</body>
</html>
