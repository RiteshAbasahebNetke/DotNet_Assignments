@model codeFirst.Models.Emp

<html>
<head>
    <title> Home-Edit </title>
</head>
<body>
    <h2> Add New Emp Information </h2>
    <div>
        @using (Html.BeginForm())
        {
            <div>
                @Html.HiddenFor(p=>p.EmpID)
            </div>
            <div>
                @Html.LabelFor(p => p.EmpName)
                <div>
                    @Html.EditorFor(p => p.EmpName)
                </div>
            </div>

            <div>
                @Html.LabelFor(p => p.EmailID)
                <div>
                    @Html.EditorFor(p => p.EmailID)
                </div>
            </div>

            <div>
                @Html.LabelFor(p => p.Salary)
                <div>
                    @Html.EditorFor(p => p.Salary)
                </div>
            </div>

            <div>
                @Html.Label("Select Dept")
                <div>
                    @Html.DropDownList("DeptID", "Select Dept")
                </div>
            </div>
            <div>
                <input type="submit" value="Update" />
            </div>

        }
    </div>
</body>
</html>