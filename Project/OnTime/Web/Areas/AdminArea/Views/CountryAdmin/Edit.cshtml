@model Country
<div class="card">

    <form asp-action="Edit" method="post">
        <div class="card-body">
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <input type="hidden" asp-for="CountryID" />
            <div class="form-group">
                <label asp-for="CountryName"> Country Name  </label>
                <input type="text" class="form-control" asp-for="CountryName">
                <span asp-validation-for="CountryName" class="text-danger"></span>
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-gradient-primary me-2"> Edit </button>
            </div>
        </div>
    </form>

</div>