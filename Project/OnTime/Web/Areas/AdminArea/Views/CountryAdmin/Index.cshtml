@model IEnumerable<Country>

<div class="container">
    <div class="row">
        <div class="col-md-12">
      <div class="card">
          <div class="card-body">
             <h2 class="card-title">Country List</h2>
            <a asp-action="Create" class="btn btn-primary"> Create New </a>
            <hr />

            <table class="table">
               <thead>
               <tr>
                   <th> Sr.No </th>
                   <th> CountryName </th>
                   <th> Actions </th>
               </tr>
               </thead>
            <tbody>
                     @{
                            int srno = 1;
                      }
             @foreach(var temp in Model)
             {
                 <tr>
                     <td> @srno </td>
                     <td> @temp.CountryName</td>
                     <td>
                         <a asp-action="Edit" asp-route-id="@temp.CountryID" class="btn btn-primary"> Edit </a>
                         <a asp-action="Delete" asp-route-id="@temp.CountryID" class="btn btn-Danger"> Delete </a>
                     </td>
                 </tr>
             }
            </tbody>
            </table>
             </div>
          </div>
        </div> 
    </div>
</div>