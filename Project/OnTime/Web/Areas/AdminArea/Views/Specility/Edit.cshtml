@model Specility
<div class="card">

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="SpecilityID" />
        <div class="card-body">
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <label asp-for="SpecilityName"> Specility Name  </label>
                <input type="text" class="form-control" asp-for="SpecilityName">
                <span asp-validation-for="SpecilityName" class="text-danger"></span>
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-gradient-primary me-2"> Update </button>
            </div>
        </div>
    </form>

</div>