@model ClinicRatingVM

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <h3> Clinic Ratings </h3>
                    <form asp-action="AddClinicRating" method="post">
                        <input type="hidden" asp-for="UserID" />
                        <input type="hidden" asp-for="ClinicID" />
                        <div>
                            <div> Ratings:</div>
                            <select>
                                <option> Select Rating </option>
                                <option value="1"> 1 </option>
                                <option value="2"> 2 </option>
                                <option value="3"> 3 </option>
                                <option value="4"> 4 </option>
                                <option value="5"> 5 </option>
                            </select>

                        </div>  <br /> <br />

                        <div>
                            <label asp-for="Review"></label>
                            <textarea asp-for="Review"></textarea>
                        </div>
                        <div>
                            <input type="submit" value="Save" asp-route-cid="@ViewBag.ClinicID" class="btn btn-outline-info" />
                        </div>
                    </form>

                    <h2 class="title">Rating List</h2>
                    <hr />
                    <table class="table">
                        <thead>
                            <tr align="center">
                                <th> Sr.No </th>
                                <th> UserName </th>
                                <th> Rating </th>
                                <th> Review </th>
                            </tr>
                        </thead>
