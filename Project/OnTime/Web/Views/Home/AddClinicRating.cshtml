@model ClinicRatingVM

<html>
    <head>
        <title> ClinicRating </title>
    </head>
    <body>

    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <h3> Clinic Ratings </h3>
                        <form asp-action="AddClinicRating" method="post">
                            <input type="hidden" value="@ViewBag.cid" asp-for="ClinicID" />
                            <input type="hidden" value="@ViewBag.uid" asp-for="UserID" />
                            <div>
                                <div> Ratings:</div>
                                <select asp-for="Rating">
                                    <option> Select Rating </option>
                                    <option value="1"> 1 </option>
                                    <option value="2"> 2 </option>
                                    <option value="3"> 3 </option>
                                    <option value="4"> 4 </option>
                                    <option value="5"> 5 </option>
                                </select>

                            </div>  <br /> <br />

                            <div>
                                <label asp-for="Review"></label>
                                <textarea asp-for="Review"></textarea>
                            </div>
                            <div>
                                <input type="submit" value="Save"  class="btn btn-outline-info" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @await Component.InvokeAsync("ClinicRatingVC", new{cid=ViewBag.cid, uid=ViewBag.uid});
    </body>
</html>
