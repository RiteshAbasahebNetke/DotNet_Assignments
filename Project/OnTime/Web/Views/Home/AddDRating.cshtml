@model DoctorRatingVM

<html>
    <head>
        <title> Rating </title>
    </head>
    <body>

    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <h3> Doctor Ratings </h3>
                        <form asp-action="AddDRating" method="post">
                            <input type="hidden" value="@ViewBag.did" asp-for="DoctorID" />
                            <input type="hidden" value="@ViewBag.uid" asp-for="UserID" />
                            <div>
                                <label>Ratings:</label>
                                <select asp-for="Rating">
                                    <option value="">Select Rating</option>
                                    <option value="1">1</option>
                                    <option value="2">2</option>
                                    <option value="3">3</option>
                                    <option value="4">4</option>
                                    <option value="5">5</option>
                                </select>
                            </div>
                            <br /> <br />

                            <div>
                                <label asp-for="Review">Review:</label>
                                <textarea asp-for="Review"></textarea>
                            </div>
                            <br />
                            <div>
                                <input type="submit" value="Save" class="btn btn-outline-info" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @await Component.InvokeAsync("DoctorRatingVC", new{did=ViewBag.did, uid=ViewBag.uid});
    </body>
</html>