@model PatientVM

<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title> Admin Login </title>
    <link rel="stylesheet" href="~/adminassets/vendors/mdi/css/materialdesignicons.min.css">
    <script src="~/adminassets/vendors/js/vendor.bundle.base.js"></script>
    <link rel="stylesheet" href="~/adminassets/css/style.css">
    <link rel="shortcut icon" href="~/adminassets/images/favicon.ico">
</head>

<body>
    <div class="container">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth">
                <div class="row flex-grow">
                    <div class="col-md-12 mx-auto">
                        <div class="auth-form-light text-left p-5">
                            <div class="brand-logo"> <h2> Add Patient Info </h2> </div>
                            <form asp-action="AddPatient" method="post" enctype="multipart/form-data">
                                <div class="card-body">
                                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>

                                    <div class="form-group">
                                        <label asp-for="FirstName"> First Name  </label>
                                        <input type="text" class="form-control" asp-for="FirstName">
                                        <span asp-validation-for="FirstName" class="text-danger"></span>
                                    </div>

                                    <div class="form-group">
                                        <label asp-for="LastName"> Last Name  </label>
                                        <input type="text" class="form-control" asp-for="LastName">
                                        <span asp-validation-for="LastName" class="text-danger"></span>
                                    </div>

                                    <div class="form-group">
                                        <label asp-for="MobileNo"> MobileNo  </label>
                                        <input type="text" class="form-control" asp-for="MobileNo">
                                        <span asp-validation-for="MobileNo" class="text-danger"></span>
                                    </div>

                                    <div class="form-group">
                                        <label asp-for="Address"> Address  </label>
                                        <input type="text" class="form-control" asp-for="Address">
                                        <span asp-validation-for="Address" class="text-danger"></span>
                                    </div>

                                    <div class="form-group">
                                        <label asp-for="Gender"> Gender </label>
                                        <input type="text" class="form-control" asp-for="Gender">
                                        <span asp-validation-for="Gender" class="text-danger"></span>
                                    </div>

                                    <div class="form-group">
                                        <label asp-for="PhotoPath" class="form-label"> Upload Photo </label>
                                        <input type="file" class="form-control" asp-for="PhotoPath" />
                                        <span asp-validation-for="PhotoPath" class="text-danger"></span>
                                    </div>

                                    <div class="form-group">
                                        <label asp-for="EmailID"> EmailID </label>
                                        <input type="text" class="form-control" asp-for="EmailID">
                                        <span asp-validation-for="EmailID" class="text-danger"></span>
                                    </div>

                                    <div class="form-group">
                                        <label asp-for="Password"> Password </label>
                                        <input type="text" class="form-control" asp-for="Password">
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>

                                    <div class="form-group">
                                    <label asp-for="UserID"> User Name </label>
                                    <select class="form-select" asp-for="UserID" asp-items="@ViewBag.UserID">
                                    <option> Select User </option>
                                    </select>
                                    <span asp-validation-for="UserID"></span>
                                    </div>
                                </div> <br />
                                <div class="text-center">
                                    <button type="submit" class="btn btn-gradient-primary me-2"> Save </button>
                                </div>
                            </form>
                             

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/adminassets/vendors/js/vendor.bundle.base.js"></script>
    <script src="~/adminassets/js/off-canvas.js"></script>
    <script src="~/adminassets/js/hoverable-collapse.js"></script>
    <script src="~/adminassets/js/misc.js"></script>
</body>
</html>

