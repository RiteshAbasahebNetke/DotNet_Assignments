@model ClinicVM

<html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title> Clinic Details </title>

    <link rel="stylesheet" href="~/adminassets/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="~/adminassets/vendors/css/vendor.bundle.base.css">
    <link rel="stylesheet" href="~/adminassets/css/style.css">
    <link rel="shortcut icon" href="~/adminassets/images/favicon.ico">
</head>
<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth">
                <div class="row flex-grow">
                    <div class="col-lg-4 mx-auto">
                        <div class="auth-form-light text-left p-5">
                           <div class="card">
                                <form asp-action="ClinicView" post="get">
                                    <input type="hidden" value="@ViewBag.cid" asp-for="ClinicID" />
                                    <div class="card-body">
                                     <div class="form-group">
                                        <h2> Clinic Details </h2>
                                            Clinic Name:@Model.ClinicName <br /> <br />
                                            Address:@Model.Address <br /> <br />
                                            EmailID:@Model.EmailID <br /> <br />
                                            Mobile No:@Model.MobileNo <br /> <br />
                                            LandLine No:@Model.LandLineNo <br /> <br />
                                            Website Url:@Model.WebsiteUrl <br /> <br />
                                            Contact PersonName:@Model.ContactPersonName <br /> <br />
                                        @*Clinic Facilities:@Model.ClinicFacilities <br />*@
                                       <a asp-action="AddClinicRating" asp-route-cid=@Model.ClinicID asp-controller="Home"> AddClinicRating </a>
                                     </div>
                                  </div>
                              </form>
                           </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/adminassets/vendors/js/vendor.bundle.base.js"></script>
    <script src="~/adminassets/js/off-canvas.js"></script>
    <script src="~/adminassets/js/hoverable-collapse.js"></script>
    <script src="~/adminassets/js/misc.js"></script>
</body>
</html>