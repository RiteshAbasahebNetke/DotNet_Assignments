
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>FewMoreSelectors</title>
    <script src="~/Scripts/jquery-3.7.1.js"></script>
    <script type="text/javascript">
        $(function () {
            //$("ul li:first").css("background-color", "tomato")
            //$("ul li:last").css("background-color","Yellow")
            $("[href]").css("background-color", "gold")
            $("a[target='_blank']").css("background-color", "wheat")
            $(":button").css("background-color","red")
        });
    </script>
</head>
<body>
    <div>
        <button> Click </button> <br /> <br />
        <input type="button" value="Click" />
        <ul>
            <li> First </li>
            <li> Second </li>
            <li> Third </li>
            <li> Fourth </li>
            <li> Fifth </li>
        </ul> <br />

        <a target="_blank"> First Link </a>
        <a target="_parent"> Second Link </a>
        <a target="_self"> Third Link </a>
        <a href="#"> Fouth Link </a>
    </div>
</body>
</html>
